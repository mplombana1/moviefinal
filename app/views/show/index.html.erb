
  <div id="movies" class="row">
  	<%= render partial: 'query_form' %>

  <div class="container">
    <div id="movies" class="row">
	<% if @movies.any?  %> 
		<% @movies.each do |movie| %>

			<div class="col-md-3">
				<div class="well text-center">
					<img src="<%= movie['Poster'] %>">
					<h5><%= movie['Title'] %></h5>
					<a class="btn btn=primary" href="movie?imdbID=<%= movie['imdbID'] %>">Movie Details</a>
				</div>
			</div>
		<% end %>
	<% end %>
  </div>
</div>
